<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--SearchBar Nav-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ImgBtnHome_Menu"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_menu_black_24dp" />

            <EditText
                android:id="@+id/EdTxtHome_Search"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Search by Title"
                android:textSize="19sp"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/ImgBtnHome_Map"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_map" />

            <ImageButton
                android:id="@+id/ImgBtnHome_Cart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_shopping_cart" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RdBtnHome_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title" />

            <RadioButton
                android:id="@+id/RdBtnHome_ISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISBN" />

            <RadioButton
                android:id="@+id/RdBtnHome_Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author" />

            <RadioButton
                android:id="@+id/RdBtnHome_Bookstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookstore" />
        </RadioGroup>

        <!--Newly Added Books-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Newly Added Books"
                android:textColor="@color/myBlack"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:layout_marginStart="20dp"/>

            <ImageButton
                android:id="@+id/ImgBtnHome_ArrowNext"
                android:layout_marginStart="150dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_keyboard_arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover6" />

        </LinearLayout>

        <!--Browse Books-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Books"
                android:textColor="@color/myBlack"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:layout_marginStart="20dp"/>

            <ImageButton
                android:id="@+id/ImgBtnHome_ArrowNext2"
                android:layout_marginStart="150dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_keyboard_arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover1"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover2" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover6" />

        </LinearLayout>

        <!--Bookstores Near You-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookstores Near You"
                android:textColor="@color/myBlack"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:layout_marginStart="20dp"/>

            <ImageButton
                android:id="@+id/ImgBtnHome_ArrowNext3"
                android:layout_marginStart="150dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_keyboard_arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover1"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover2" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cover6" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

</RelativeLayout>