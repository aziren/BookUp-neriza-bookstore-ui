<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".LogInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:id="@+id/textView3"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="180dp"-->
            <!--android:text="BOOKUP"-->
            <!--android:textColor="@color/myBlack"-->
            <!--android:textSize="50sp" />-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/bookup"
            android:contentDescription="bookuplogo"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/EdTxtLogIn_Email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/myWhite"/>

        <EditText
            android:id="@+id/EdTxtLogIn_Password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/myWhite"/>

        <Button
            android:id="@+id/BtnLogIn_LogIn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:layout_marginTop="10dp"
            android:textColor="@color/myWhite"
            android:background="@color/btnColor"/>

        <TextView
            android:id="@+id/TxtVwLogIn_ForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Forgot Password?"
            android:textColor="@color/myWhite"/>

        <RadioGroup
            android:id="@+id/RdGrp_Users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RdBtnLogIn_BookShopper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Shopper"
                android:textColor="@color/myWhite"/>

            <RadioButton
                android:id="@+id/RdBtnLogIn_Bookstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Bookstore/Publisher"
                android:textColor="@color/myWhite"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtVwLogIn_Create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Don't have an account yet?"
                android:textColor="@color/myWhite" />

            <TextView
                android:id="@+id/TxtVwLogIn_CreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" Create one now."
                android:textColor="@color/myWhite" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>