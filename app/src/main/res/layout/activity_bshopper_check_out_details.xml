<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BShopperCheckOutDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ImgBtnBShopprBrowseBks_Back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/TextViewLogIn_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="Check Out"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/TextViewLogIn_Tfdfitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Shipping Address"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/EdTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="Full Name"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/EdTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="Phone Number"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/EdTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="House Number, Building, and Street Name"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/EdTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="City/Municipality"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/EdTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="Barangay"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/EdTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="Postal Code"
            android:textSize="18dp" />

        <Button
            android:id="@+id/BtnBShopprBrwsBks_SeeRecommnddBS"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Submit" />

    </LinearLayout>

</RelativeLayout>